<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:backgroundTint="#FFFFFF"
        android:onClick="onClickDone"
        android:src="@drawable/ic_done_black_24dp"
        android:tint="#00C853" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:backgroundTint="#FFFFFF"
        android:onClick="onClickClose"
        android:src="@drawable/ic_close_black_24dp"
        android:tint="#D50009"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Edit Contact"
            android:textColor="#4868DD"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/fab_avatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#ADAA00FF"
            android:src="@drawable/ic_account_circle_black_24dp" />

        <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#356F35" />

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:inputType="phone"
            android:textColor="#356F35" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="280dp"
        android:layout_marginBottom="20dp"
        android:onClick="onClickDelete"
        android:src="@drawable/ic_delete_black_24dp"
        android:tint="#FFFFFF"
        app:backgroundTint="#D50009" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="20dp"
        android:onClick="onClickCall"
        android:src="@drawable/ic_call_black_24dp"
        android:tint="#FFFFFF"
        app:backgroundTint="#00C853"  />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="180dp"
        android:layout_marginBottom="20dp"
        android:onClick="onClickSms"
        android:src="@drawable/ic_sms_black_24dp"
        android:tint="#FFFFFF"
        app:backgroundTint="#B69806"  />

</androidx.coordinatorlayout.widget.CoordinatorLayout>